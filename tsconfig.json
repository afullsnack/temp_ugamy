{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true, 
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": [
    "apps/**/*",
    "packages/**/*",
    "services/**/*",
    ".eslintrc.js",
    "prettier.config.cjs"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    ".next",
    ".expo"
  ]
}