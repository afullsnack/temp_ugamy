{
  "name": "@ugamy/api",
  "type": "module",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node ./dist/src/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "npm run lint --fix",
    "db:generate": "pnpm with-env npx drizzle-kit generate --config=./dist/drizzle.config.js",
    "db:migrate": "pnpm with-env npx drizzle-kit migrate --config=./dist/drizzle.config.js",
    "db:generate:dev": "pnpm with-env npx drizzle-kit generate --config=./drizzle.config.ts",
    "db:migrate:dev": "pnpm with-env npx drizzle-kit migrate --config=./drizzle.config.ts",
    "test": "cross-env NODE_ENV=test vitest",
    "build": "tsc && tsc-alias",
    "with-env": "dotenv -e .env --"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.859.0",
    "@aws-sdk/lib-storage": "^3.859.0",
    "@aws-sdk/s3-request-presigner": "^3.859.0",
    "@hono/node-server": "^1.14.3",
    "@hono/zod-openapi": "^0.19.8",
    "@libsql/client": "^0.15.8",
    "@scalar/hono-api-reference": "^0.9.2",
    "dotenv": "^17.0.1",
    "dotenv-expand": "^12.0.2",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.7.11",
    "hono-pino": "^0.9.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "stoker": "1.4.3",
    "zod": "^3.25.51"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.3",
    "@flydotio/dockerfile": "^0.7.10",
    "@types/node": "^24.0.10",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.28.0",
    "eslint-plugin-format": "^1.0.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.1"
  }
}